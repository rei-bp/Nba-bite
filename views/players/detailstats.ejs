<div class="detailStats">

    <h1 class="nameTitle"><%= first %> <%= last %> </h1>

    <div class='statContainer'>

       

    <table class='table'>
    <caption>SEASON AVERAGE</caption>
    <thead>
        <tr>
            <th class="thStat">YEAR</th>
            <th>MIN</th>
            <th>GP</th>
            <th>FGM</th>
            <th>FGA</th>
            <th>FG3M</th>
            <th>FG3A</th>
            <th>FTM</th>
            <th>FTA</th>
            <th>OREB</th>
            <th>DREB</th>
            <th>REB</th>
            <th>AST</th>
            <th>STL</th>
            <th>BLK</th>
            <th>TOV</th>
            <th>PF</th>
            <th>PTS</th>
            <th>FG%</th>
            <th>FG3%</th>
            <th>FT%</th>
            <th class="thDelete"></th>
        </tr>
    </thead>
    <tbody>
        <% statsRes.forEach (res => { %>
        <tr class='statRow'>

            <td class="tdYear"> <strong> <%= res.year %> </strong> </td>

            <td class='tdStat'><%= res.min%> </td>
            <td class='tdStat'><%= res.gp %> </td>
            <td class='tdStat'><%= res.fgm %> </td>
            <td class='tdStat'><%= res.fga %> </td>
            <td class='tdStat'><%= res.fg3m %> </td>
            <td class='tdStat'><%= res.fg3a %> </td>
            <td class='tdStat'><%= res.ftm %> </td>
            <td class='tdStat'><%= res.fta %> </td>
            <td class='tdStat'><%= res.oreb %> </td>
            <td class='tdStat'><%= res.dreb %> </td>
            <td class='tdStat'><%= res.reb %> </td>
            <td class='tdStat'><%= res.ast %> </td>
            <td class='tdStat'><%= res.stl %> </td>
            <td class='tdStat'><%= res.blk %> </td>
            <td class='tdStat'><%= res.tov %> </td>
            <td class='tdStat'><%= res.pf %> </td>
            <td class='tdStat'><%= res.pts %> </td>
            <td class='tdStat'><%= res.fg_pct %> </td>
            <td class='tdStat'><%= res.fg3_pct %> </td>
            <td class='tdStat'><%= res.ft_pct %> </td>
            <td class='deleteStat'>
                <form action="/players/delete/<%= res.playerId %>/<%= first %>/<%= last %>/<%= res.year %>?_method=DELETE" method="POST"> 
                <input type="submit" class="deleteButtonStat" value="ðŸ—‘"></form>
            </td>
        </tr>

        <% }) %> 
    </tbody>
    <tfoot>
    </tfoot>
    </table>
    </div>
        
        <form class="formContainer" action="/players/addseason/<%= id %>/<%= first %>/<%= last %>" method="POST">
            
            <input type="integer" class="seasonInput" placeholder="2020" name="season">
            
            <input type="submit" class="seasonSubmit" value="Go!">
        
        </form>

</div>
       
